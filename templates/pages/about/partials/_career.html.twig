<div class="career-timeline-container">
    <div class="career-timeline">
        <div class="center-line"></div>
        {% for element in timeline %}
            <div class="row">
                <div class="item">
                    <div class="date">
                        <p>{{ element.startDate | date('M Y') }} {% if element.endDate %} - {{ element.endDate | date('M Y') }}{% endif %}</p>
                    </div>
                    <div class="content">
                        <div>
                            <img src="{{element.logoUrl}}" alt="{{ element.name }}">
                            <div>
                                <h3>{{ element.name }}</h3>
                                <p>{{ element.subtitle }} <span class="location">
{#                                        use publi/about/location.svg#}
                                        {{ source('@public/images/about/location.svg') }}
                                        {{ element.location }}</span>
                                </p>
                            </div>
                        </div>
                        <div class="elements-skills-container">
                            {% for skill in element.skills %}
                                {% if skill.badgeUrl is not null %}
                                    <div class="project-card-skills-img">
                                        <img src="{{ vich_uploader_asset(skill, 'badgeFile') }}" alt="{{ skill.name }}">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <p>{{ element.description | raw }}</p>
                        <div class="elements-skills-hashtag-container">
                            {% for skill in element.skills %}
                                {% if skill.badgeUrl is null %}
                                    <div class="elements-skills-hashtag">
                                        <p>#{{ skill.name }}</p>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="circle">
                    {% if element.type == 'formation' %}
                        <img src="{{ asset('images/about/formation.svg') }}" alt="Formation">
                    {% elseif element.type == 'experience' %}
                        <img src="{{ asset('images/about/experience.svg') }}" alt="Experience">
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
